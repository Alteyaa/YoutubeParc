<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DownloadDialog" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/download_corner_radius</item>
    </style>


    <style name="button" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_indent</item>
        <item name="android:layout_marginStart">@dimen/normal_indent</item>
        <item name="android:layout_marginEnd">@dimen/normal_indent</item>
        <item name="android:background">@drawable/ic_standard_button</item>

    </style>

</resources>
